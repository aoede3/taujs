{
  "compilerOptions": {
    "baseUrl": "../../",
    "esModuleInterop": true,
    "jsx": "react",
    "module": "ESNext",
    "moduleResolution": "node",
    "outDir": "dist/shared",
    "paths": {
      "@client/*": ["src/client/*"],
      "@server/*": ["src/server/*"],
      "@shared/*": ["src/shared/*"]
    },
    "target": "ESNext",
    "verbatimModuleSyntax": true
  },
  "exclude": ["node_modules"],
  "include": [".", "../client/utils"]
}
