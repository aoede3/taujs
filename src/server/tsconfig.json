{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "../",
    "forceConsistentCasingInFileNames": true,
    "jsx": "react",
    "lib": ["esnext"],
    "module": "ES2022",
    "moduleResolution": "node",
    "noEmit": false,
    "outDir": "dist/server",
    "paths": {
      "@client/*": ["client/*"],
      "@server/*": ["server/*"],
      "@shared/*": ["shared/*"]
    },
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "esnext",
    "types": ["vite/client"],
    "verbatimModuleSyntax": true
  },
  "exclude": ["node_modules"],
  "extends": "fastify-tsconfig"
  // "include": ["."]
}
