{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": "../../",
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react",
    "lib": ["ESNext", "DOM"],
    "module": "ESNext",
    "moduleResolution": "node",
    "noEmit": false,
    "paths": {
      "@client/*": ["src/client/*"],
      "@shared/*": ["src/shared/*"]
    },
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "ESNext",
    "verbatimModuleSyntax": true
  },
  "include": [".", "../shared/routes/routes.ts", "utils"]
}
